#!/usr/bin/env bash

#
# ~/.path
#

##
# ADD `~/bin` TO THE `$PATH`.
##
#export PATH="$HOME/bin:$PATH";

##
# BASH UTILITIES.
##
PATH="/usr/local/bin:$PATH"
PATH="/usr/local/lib:$PATH"

##
# HOMEBREW'S CORE CONFIGURATION.
##
PATH="/usr/local/sbin:$PATH"

##
# HOMEBREW'S `coreutils` — `$(brew --prefix coreutils)/libexec/gnubin`.
##
PATH="$(brew --prefix coreutils)/libexec/gnubin:$PATH"

##
# HOMEBREW'S CURL --with-openssl.
##
PATH="$(brew --prefix curl)/bin:$PATH"

##
# HOMEBREW'S OPENSSL.
##
PATH="$(brew --prefix openssl)/bin:$PATH"


################################################################################
#
# `pyenv` — "PYTHON ENVIRONMENT MANAGER".
#
################################################################################
if command -v pyenv > /dev/null; then eval "$(pyenv init -)"; fi

# ENABLE AUTO-ACTIVATION OF `pyenv virtualenvs`.
if command -v pyenv > /dev/null; then eval "$(pyenv virtualenv-init -)"; fi

# PATH FOR PYTHON.
#PATH=/usr/local/share/python:$PATH

# FOR `pyenv`.
PYENV_ROOT=$HOME/.pyenv

# FOR CUSTOM SCRIPTS.
PATH=$PYENV_ROOT/bin:$PATH


################################################################################
#
# `rbenv` — "RUBY ENVIRONMENT MANAGER".
#
################################################################################

# ADD & LOAD `rbenv` EVERY TIME YOU OPEN A TERMINAL
if command -v rbenv > /dev/null; then eval "$(rbenv init -)"; fi

# FOR `rbenv`.
RBENV_ROOT=$HOME/.rbenv

# FOR CUSTOM SCRIPTS.
PATH=$RBENV_ROOT/bin:$PATH


################################################################################
#
# AWS CLI
#
################################################################################

export PATH="$HOME/.local/bin:$PATH"


################################################################################
#
# COMPOSER
#
################################################################################

COMPOSER_HOME=$HOME/.composer
PATH=$COMPOSER_HOME/vendor/bin:$PATH

################################################################################
#
# IMAGEMAGICK
#
################################################################################

export PKG_CONFIG_PATH="/usr/local/lib/pkgconfig:$PKG_CONFIG_PATH"
export PKG_CONFIG_PATH="/usr/local/opt/imagemagick@6/lib/pkgconfig:$PKG_CONFIG_PATH"
export PATH="/usr/local/opt/imagemagick@6/bin:$PATH"


################################################################################
#
# PRINCE
#
################################################################################

PATH="/usr/local/lib/prince/bin:$PATH"

